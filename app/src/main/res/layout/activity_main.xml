<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">


    <androidx.fragment.app.FragmentContainerView
        android:id="@+id/fragmentContainerView"
        android:name="androidx.navigation.fragment.NavHostFragment"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toTopOf="@+id/bottomNavHolder"
        app:defaultNavHost="true"
        app:navGraph="@navigation/nav" />

    <androidx.cardview.widget.CardView
        android:id="@+id/bottomNavHolder"
        android:layout_width="match_parent"
        android:layout_margin="5dp"
        app:cardCornerRadius="16dp"
        android:backgroundTint="@color/defaultSecondaryColor"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_height="73dp">

        <com.ismaeldivita.chipnavigation.ChipNavigationBar
            android:id="@+id/menu"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cnb_menuResource="@menu/menu"
            android:layout_margin="10dp"
            app:cnb_orientationMode="horizontal"
            app:cnb_addBottomInset="false"
            app:cnb_addLeftInset="false"
            app:cnb_addRightInset="false"
            app:cnb_addTopInset="false"
            app:cnb_unselectedColor="@color/primaryDefaultColor"
            app:cnb_badgeColor="@color/primaryDefaultColor"
            app:cnb_radius="8dp"
            app:cnb_iconSize="40dp" />

    </androidx.cardview.widget.CardView>




</androidx.constraintlayout.widget.ConstraintLayout>