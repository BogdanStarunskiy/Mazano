<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/frameLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/gradient_background"
    tools:context=".ui.details.DetailsFragment">

    <ImageView
        android:id="@+id/film_logo"
        android:layout_width="match_parent"
        android:layout_height="220sp"
        app:layout_constraintBottom_toTopOf="@+id/materialCardView"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <com.google.android.material.card.MaterialCardView
        android:id="@+id/materialCardView"
        android:layout_width="match_parent"
        android:layout_height="510dp"
        android:backgroundTint="@color/primaryDefaultColor"
        app:cardCornerRadius="20dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        tools:layout_conversion_absoluteHeight="0dp"
        tools:layout_conversion_absoluteWidth="0dp">


        <ImageButton
            android:id="@+id/playButton"
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:layout_marginHorizontal="330dp"
            android:layout_marginVertical="10dp"
            android:background="@null"
            android:padding="5dp"
            android:scaleType="centerCrop"
            android:src="@drawable/play_button_img"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent" />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="30dp"
            android:layout_marginVertical="10dp"
            android:text="Year"
            android:textColor="@color/white"
            android:textSize="25sp"
            android:textStyle="bold"/>
        <TextView
            android:id="@+id/filmYear"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="30dp"
            android:layout_marginVertical="50dp"
            android:text="2020"
            android:textColor="@color/white"
            android:textSize="25sp"
            android:textStyle="bold"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="165dp"
            android:layout_marginVertical="10dp"
            android:text="Time"
            android:textColor="@color/white"
            android:textSize="25sp"
            android:textStyle="bold" />
        <TextView
            android:id="@+id/filmTime"
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="140dp"
            android:layout_marginVertical="50dp"
            android:text="2 h 20 min"
            android:textColor="@color/white"
            android:textSize="25sp"
            android:textStyle="bold" />
        <View
            android:layout_marginHorizontal="120dp"
            android:layout_marginVertical="10dp"
            android:layout_width="1dp"
            android:layout_height="80dp"
            android:layout_weight="1"
            android:background="@color/black" />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="30dp"
            android:layout_marginVertical="105dp"
            android:text="Description:"
            android:textColor="@color/white"
            android:textSize="33sp"
            android:textStyle="bold"/>

        <TextView
            android:id="@+id/movieDescription"
            android:layout_width="350dp"
            android:layout_height="315dp"
            android:layout_marginHorizontal="30dp"
            android:layout_marginVertical="160dp"
            android:text="Vin Diesel’s Dominic  Toretto is leading a quiet life off the grid with Letty and his son.Vin Diesel’s Dominic  Toretto is leading a quiet life off the grid with Letty and his son.Vin Diesel’s Dominic  Toretto is leading a quiet life off the grid with Letty and his son.Vin Diesel’s Dominic  Toretto is leading a quiet life off the grid with Letty and his son.Vin Diesel’s Dominic  Toretto is leading a quiet life off the grid with Letty and his son"
            android:textColor="@color/gray_8D"
            android:textSize="20sp"
            android:textStyle="bold" />


    </com.google.android.material.card.MaterialCardView>

    <TextView
        android:id="@+id/filmName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Random film"
        android:textColor="@color/white"
        android:textSize="30sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="@+id/materialCardView"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.066"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.247" />

    <ImageButton
        android:id="@+id/backButton"
        android:layout_width="45dp"
        android:layout_height="45dp"
        android:layout_marginHorizontal="5dp"
        android:layout_marginVertical="5dp"
        android:background="@null"
        android:padding="5sp"
        android:scaleType="centerCrop"
        android:src="@drawable/left_arrow"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.013"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.023" />

    <ImageButton
        android:id="@+id/favoriteButton"
        android:layout_width="45sp"
        android:layout_height="45sp"
        android:layout_marginHorizontal="10dp"
        android:layout_marginVertical="0dp"
        android:background="@null"
        android:padding="5sp"
        android:scaleType="centerCrop"
        android:src="@drawable/bookmark"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.023" />


</androidx.constraintlayout.widget.ConstraintLayout>